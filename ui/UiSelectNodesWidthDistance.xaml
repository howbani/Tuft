<Window x:Class="Tuft.ui.UiSelectNodesWidthDistance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        mc:Ignorable="d"
        Title="Nodes With Distance" Height="219.512" Width="300">

    <StackPanel Margin=" 20" Orientation="Vertical">
      
        <StackPanel Orientation="Horizontal">
            <Label Width="120">Distance</Label>
            <ComboBox Width="120" Name="com_distance"></ComboBox>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Width="120">Number Of Packets</Label>
            <ComboBox Width="120" Name="com_nop"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="120">Number Of Sources</Label>
            <ComboBox Width="120" Name="com_nos"></ComboBox>
        </StackPanel>
        <Label></Label>
        <Button Click="btn_compute_Click" Name="btn_compute" Height="34">Compute LifeTime</Button>
    </StackPanel>
    
</Window>
