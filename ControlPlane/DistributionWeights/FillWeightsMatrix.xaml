<Window x:Class="Tuft.ControlPlane.DistributionWeights.FillWeightsMatrix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FillWeightsMatrix" Height="300" Width="300">
    <Grid>
        <StackPanel  Name="grid_weights" Visibility="Visible">
            <GroupBox FontWeight="Medium" Header="Weights" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Name="Boxes_Container">
                </StackPanel>
            </GroupBox>
            <StackPanel Name="dist_val" Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
            </StackPanel>          
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="btn_ok_Click" Width="60" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Submit" Margin="0,0,20,0" />
            <Button Click="btn_done_Click" Width="60" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Done" />
        </StackPanel>
    </Grid>
</Window>
