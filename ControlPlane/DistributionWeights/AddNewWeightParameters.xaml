<Window x:Class="Tuft.ControlPlane.DistributionWeights.AddNewWeightParameters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddNewWeightParameters" Height="300" Width="300">
    <Grid>
        <StackPanel Name="grid_add" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox FontWeight="Medium" Header="Add Distributions" Name="group_add" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical">
                        <TextBox Name="txt_input" Width="150" Height="30"></TextBox>
                        <Button Name="add_btn" Click="btn_click_add" Width="70" Height="30" Margin="0,20,0,0">Add</Button>
                        <Button Name="Done" Click="btn_click_done" Width="70" Height="30" Margin="0,20,0,0">Done</Button>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
